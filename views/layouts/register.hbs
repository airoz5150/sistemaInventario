<h1 class="text-center my-5">Registro de usuarios nuevos</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form action="/auth/register" method="post">
            <input type="hidden" name="registro" value="{{csrfToken}}" />
            <input
                class="form-control mb-2"
                name="name"
                placeholder="ingrese nombre"
                type="text"
                value="bluuweb"
            >
              <input
                class="form-control mb-2"
                name="lastName"
                placeholder="ingrese apellido"
                type="text"
                value="bluuweb"
            >
              <input
                class="form-control mb-2"
                name="addresss"
                placeholder="ingrese direccion (domicilio)"
                type="text"
                value="bluuweb"
            >
              <input
                class="form-control mb-2"
                name="position"
                placeholder="ingrese puesto"
                type="text"
                value="bluuweb"
            >
            <input
                class="form-control mb-2"
                name="email"
                placeholder="ingrese correo electronico"
                type="text"
                value="bluuweb@test.com"
            >

            <input
                class="form-control mb-2"
                name="password"
                placeholder="ingrese contraseña"
                type="password"
                value="123123"
            >
            <input
                class="form-control mb-2"
                name="repassword"
                placeholder="confirma contraseña"
                type="password"
                value="123123"
            >
            <button class="btn btn-primary" type="submit">Registrar</button>
        </form>
    </div>
</div>